---
jsfile: ["../js/navbarmanagement.js"]
---


{% extends "layouts/base.njk" %} 
  {%- block seo -%}

      <title> {{post.title}} </title>
      <!--Twitter Card-->
      <meta name="twitter:title" content="{{ post.title }}">
      <meta name="twitter:description" content="{{ subtitle|striptags|truncate(196) }}">
      <meta name="twitter:image" content="{{ env.base.img + coverImage }}">

      
      <!--Schema-->
      <meta itemprop="name" content="{{ title}}">
      <meta name="description" content="{{ subtitle|striptags|truncate(196) }}">
      
      <!-- Facebook OpenGraph -->
      <meta property="og:title" content="{{post.title}}">
      <meta property="og:description" content="{{ subtitle|striptags|truncate(196) }}">
      <meta property="og:image" content="{{ env.base.img + coverImage }}"/>
      <meta property="og:image:width" content="1200" />
      <meta property="og:image:height" content="675" />
  {%- endblock -%}



{% block content %}

  <div class="columns is-centered">
    <div class="column is-8">
      <article>
        <div class="section">
          
                <div class="columns is-centered">
                    <div class="column is-three-quarter">
                        <div class="block">
                            <h1 class="title is-3 has-text-centered">{{ title }}</h1>
                            <H2 class="subtitle is-4 has-text-centered">{{ subtitle }}</H2>
                        </div>
                    </div>
                </div>

                <div class="columns is-centered cotent">
                  <div class="column is-four-fifths">
                    {% image coverImage, coverImageAlt %}
                  </div>
                </div>

            <div class='content'>

            {{ content | safe }}

            </div>


      </div>
      </article>
        <!-- Comment Box Snippet for test -->
          <aside id="comment-sidecar"></aside>
          <script type="text/javascript">
              (function() {
                  const scriptNode = document.createElement('script');
                  scriptNode.type = 'text/javascript';
                  scriptNode.async = true;
                  scriptNode.src = '../comment-sidecar/comment-sidecar-js-delivery.php'; // adjust to the correct path
                  (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(scriptNode);
              })();
          </script>


        </div>
        </div>

{% endblock %}
 {% block content %}

 <!-- Top section
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <section class="hero has-background is-transparent is-halfheight pb-O">
    <!--<img alt="Touchbar carte-mère" class="hero-background is-transparent" src="images/MBPtouchbarboard-export.jpg" />
    -->
      <div class="hero-body has-text-centered-mobile has-background is-transparent pb-0">
      <div class="container">
        <div class="columns">
          
          <div class="column is-6 pl-6 is-align-items-center">
            <h1 class="title is-1 maintitle">Réparer l'irréparable</h1>
            <h2 class="subtitle is-3 is-spaced">Experts en réparations impossibles</h2>
               
